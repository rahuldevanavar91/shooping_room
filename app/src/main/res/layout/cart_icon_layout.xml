<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_cart_bag"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="?selectableItemBackgroundBorderless"
    android:paddingLeft="@dimen/_8dp"
    android:paddingTop="@dimen/_2dp"
    android:paddingRight="@dimen/_8dp">

    <ImageView
        android:id="@+id/shop_cart_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:src="@drawable/ic_shopping_cart_black_24dp" />

    <TextView
        android:id="@+id/cart_count"
        style="@style/small"
        android:layout_width="@dimen/_17dp"
        android:layout_height="@dimen/_17dp"
        android:layout_marginTop="@dimen/_6dp"
        android:layout_marginRight="@dimen/_5dp"
        android:layout_toRightOf="@+id/shop_cart_icon"
        android:background="@drawable/cart_badge"
        android:gravity="center|center_vertical"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="@dimen/_11dp" />
</RelativeLayout>